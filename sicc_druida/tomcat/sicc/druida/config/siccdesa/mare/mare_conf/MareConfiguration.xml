        </Configuration>
        <LoggingService>
            <class>es.indra.mare.common.mii.services.logging.LoggingService</class>
            <delay>5000</delay>
            <logName>MareLog</logName>
            <Log4JConfigurationFile>services/log4j.lcf</Log4JConfigurationFile>
        </LoggingService>
        <APPLoggingService>
            <class>${services.LoggingService.class}</class>
            <delay>${services.LoggingService.delay}</delay>
