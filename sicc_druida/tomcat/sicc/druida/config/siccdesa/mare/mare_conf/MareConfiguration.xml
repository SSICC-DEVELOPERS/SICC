        <MGUService>
            <class>es.indra.mare.common.mgu.MGUService</class>
            <principal>${default.principal}</principal>
            <credential>${default.credential}</credential>
			<provider>${default.provider}</provider>
            <contextFactory>${default.contextFactory}</contextFactory>
			<JAASGroupName>sicc_srv_pe_es_dev</JAASGroupName>
            <passwordEncryption>none</passwordEncryption>
