                <propertiesBatchSize>30</propertiesBatchSize>
            </propertyManager>
            <userID>
		  <!--class>es.indra.sicc.mgu.UserIDSICC</class-->
		  <class>es.indra.mare.common.mgu.manager.UserIDImpl</class>
	     </userID>
