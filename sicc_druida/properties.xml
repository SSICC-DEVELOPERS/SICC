<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- ======================================================================= -->
<!--              Initialization Properties                                  -->
<!-- ======================================================================= -->
<!-- These property values may optionally be overridden with property        -->
<!-- settings from an "ant" command line, a "build.properties" file in your  -->
<!-- home directory (or current directory).                                  -->
<!-- ======================================================================= -->
<property environment="env"/>
<property name="env.COMPUTERNAME" value="${env.HOSTNAME}"/>

<!-- El valor de la variable de entorno de TOMCAT -->
<property name="tomcat.home" value="${env.CATALINA_HOME}"/>      

<!-- El nomnre de la aplicacion web que se desplegara como war en el Tomcat -->
<property name="webapp.name" value="sicc_druida"/> 

<!-- Should Java compilations set the debug compiler option? -->
<property name="compile.debug" value="true"/>

<!-- Should Java compilations set the deprecation compiler option? -->
<property name="compile.deprecation" value="false"/>

<!-- Should Java compilations set the optimize compiler option? -->
<property name="compile.optimize" value="false"/>

<!-- The source directory for the whole project -->
<property name="src" value="${basedir}/src"/>

<!-- Directorio donde se almacenaran los archivos XML Druida-->
<property name="druida.xml" value="druida/xml"/>

<!-- Directorio donde se almacenara genjava.xsl y la carpeta dtd-->
<property name="druida.conf" value="druida/conf"/>

<!-- Directorio donde se almacenaran los archivos Java Druida -->
<property name="druida.java" value="druida/java"/>

<!-- Directorio donde se almacenaran los archivos Class Druida ya almacenados -->
<property name="druida.classes" value="druida/classes"/>

<!-- Directorio donde se almacenaran los archivos Class Druida ya ejecutados en PROD -->
<property name="sicc.classes" value="fuentes/classes"/>

<property name="inheritAll" value="true"/>
