   }

   function mostrarErrorREP (codigo){
	if (codigo == '220101'){
	  var res = cdos_mostrarConfirm("Existen datos de Niveles de Segmento de consultora para la selección realizada: Pulse ok si desea regenerar los datos y cancel si desea cancelar este proceso");  
          if (res==false) {return false;}
