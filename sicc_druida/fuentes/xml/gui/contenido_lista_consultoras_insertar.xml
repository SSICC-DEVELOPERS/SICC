	function asignarDatosCliente(cad){
			cad = cad.split(",");
			var oid = cad[0];
			var nombre1 = cad[1];
			var apellido1 = cad[2];
		  if(oid =! null && oid != ""){
		     set('frmConsultarListaConsultoras.oidCliente',oid);
			  set('frmConsultarListaConsultoras.NombreApellidos',nombre1 + ' ' + apellido1);
		  }
   }

