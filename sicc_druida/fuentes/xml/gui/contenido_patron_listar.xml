				set('frmFormulario.hOidPatron', listado1.codSeleccionados());
				set('frmFormulario.hCodigoPatronNuevo', get('frmFormulario.txtCodPatronNuevo'));
				enviaSICC("frmFormulario");
			}
		} else {
			GestionarMensaje('4');
		}
   }

